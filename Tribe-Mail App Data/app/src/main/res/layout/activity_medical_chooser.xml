<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Choose your symptoms:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructions"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Gender:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/genderSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/symptom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/genderSP"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Symptom 1:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/symptom1SP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptom1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/symptom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptom1SP"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Symptom 2:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/symptom2SP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptom2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/symptom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptom2SP"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Symptom 3:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/symptom3SP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptom3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/symptom4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptom3SP"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Symptom 4:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/symptom4SP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptom4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/searchOptionsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptom4SP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/buttonColor"
            android:onClick="onSearchOptions"
            android:padding="5dp"
            android:text="Search Options" />

        <Button
            android:id="@+id/mapsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchOptionsBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/buttonColor"
            android:onClick="onSearchHospitals"
            android:padding="5dp"
            android:text="Search Hospitals"
            android:layout_marginBottom="50dp"/>


    </RelativeLayout>
</ScrollView>